<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
android:backgroundTint="@color/color_gray"
        android:layout_marginTop="8dp"
        android:id="@+id/card"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:layout_marginLeft="5dp"
            android:src="@drawable/noor_ico"
            android:scaleType="centerCrop" />
        <RelativeLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/index"

            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"
            android:text="1."/>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_product"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/index"
        android:textStyle="bold"




         />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"

                android:visibility="gone"
                android:id="@+id/sale_date"
                android:layout_alignBaseline="@+id/item_title"
                android:layout_marginLeft="16dp"
                android:text="12-02-2018"/>

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/btn_clear"
                android:layout_marginTop="2dp"
                android:layout_gravity="end"
                android:layout_alignParentRight="true"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_delete_forever_black_24dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_marginTop="20dp"
    android:layout_marginLeft="2dp"
    android:weightSum="4">
    <TextView
        android:id="@+id/unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="left"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="2"
        android:text="Unit Price"
         />
    <TextView
        android:id="@+id/qntity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="2"
        android:gravity="right"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Quantity"
        />

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"

            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="40dp"
            android:weightSum="4">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/btn_price"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorred"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
              android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:text="Total amount:"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_price_sum"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorred"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_marginRight="8dp"
               android:gravity="right"
                android:layout_weight="2"
                android:text="0.0 AED"
                />
        </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
