<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10">

    <LinearLayout
        android:id="@+id/llMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:background="@drawable/draw_bg_notification_company"
            android:gravity="top"
            android:minWidth="@dimen/dp80"
            android:padding="@dimen/dp10"
            android:text="@string/wow_that_s_great"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llMessage"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp2"
        android:paddingLeft="@dimen/dp60"
        android:text="@string/_00_00_0000"
        android:textSize="@dimen/sp14" />

</RelativeLayout>