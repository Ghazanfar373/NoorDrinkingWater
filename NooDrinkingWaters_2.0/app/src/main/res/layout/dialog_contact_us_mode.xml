<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp20"
        android:background="@drawable/draw_bg_message_dialog"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp20">

        <LinearLayout
            android:id="@+id/llViaPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:background="@drawable/draw_bg_contact_us_icons"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:src="@drawable/ic_call_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:text="@string/via_phone"
                android:textColor="@color/colorDarkestGrey"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llViaEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:background="@drawable/draw_bg_contact_us_icons"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:src="@drawable/ic_email_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:text="@string/via_email"
                android:textColor="@color/colorDarkestGrey"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignRight="@id/llMain"
        android:layout_marginRight="@dimen/mdp20"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/bg_close_button"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:src="@drawable/ic_close" />

</RelativeLayout>
